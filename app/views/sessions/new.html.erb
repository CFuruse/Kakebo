<% breadcrumb :new_session %>
<% provide(:title, "サインイン") %>
<h1>サインイン</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(:session, url: sessions_path) do |f| %>
      <%= f.label "名前" %>
      <%= f.text_field :name %>

      <%= f.label "パスワード" %>
      <%= f.password_field :password%>

      <%= f.submit "Sign in", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>
